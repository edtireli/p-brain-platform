{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "p-brain",
  "version": "0.1.0",
  "identifier": "com.edt.pbrain",
  "build": {
    "frontendDist": "../../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "p-brain",
        "width": 1200,
        "height": 800,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "resources/backend/pbrain-web-backend"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
